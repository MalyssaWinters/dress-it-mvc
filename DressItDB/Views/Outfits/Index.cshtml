@model IEnumerable<DressItDB.Models.Outfit>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Top
 
        </th>
        <th>
            Bottom
        </th>
        <th>
            Shoes
        </th>
        <th>
            Accessories
        </th>
       
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.Top.Name.
    
            </td>
            <td>
                @item.Bottom.Name
            </td>
            <td>
                @item.Shoes.Name
            </td>
            <td>
                @foreach (var accessory in item.Accessories)
                {
                    @accessory.Name
                }
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.OutfitID }) |
                @Html.ActionLink("Details", "Details", new { id = item.OutfitID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.OutfitID })
            </td>
        </tr>
    }

</table>
